---
layout: default
---

<div id="page" class="row post">

  <div class="col-md-3">

  </div>
  <div class="col-md-6 main">

    <div class="row">
      <div class="col-md-12">
        <p></p>
        <div class="caption text-center">
          <h1 class="title "><a href="<%= @document.url %>"><%= @document.title %></a></h1>
          <div class="subtitle"></div>
        </div>
        <div class="content">
          <%- @content %>
          <%- @title %>
          <%- @url %>
        </div>
      </div>
    </div>

  </div>
  <div class="col-md-3">

    <h3>Tags</h3>
    <% if @document.tags?.length: %>
      <h3>
      <% for tag in @document.tags: %>
        <a href="/tags/<%= tag %>">
          <span class="label label-default"><%= tag %></span>
        </a>
	    <% end %>
      </h3>
    <% end %>

    <h3>Related</h3>
    <ul class="list">
      <% for document in @getRelatedDocuments(): %>
  			<li><span><%= document.date.toDateString() %></span>
          <a href="<%= document.url %>"><%= document.title %></a>
        </li>
      <% end %>
		 </ul>

    <h3>Recently</h3>
    <ul class="list">
      <% for recent in @getCollection("frontpage").toJSON()[0..4]: %>
      <li>
        <a href="<%= recent.url %>"><%= recent.title %></a><br>
        <span class="caption"><%= recent.caption %></span>
      </li>
      <% end %>
    </ul>

  </div>

</div>
